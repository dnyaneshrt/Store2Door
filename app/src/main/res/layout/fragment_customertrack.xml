<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">


    <TextView
        android:id="@+id/addresstrack_fct"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/OffWhite"
        android:inputType="textMultiLine"
        android:outlineProvider="background"
        android:paddingLeft="15dp"
        android:text="Address"
        android:textColor="@color/Black"
        android:textSize="26dp"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/status_fct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addresstrack_fct"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:fontFamily="@font/caudex"
        android:gravity="center_vertical"
        android:inputType="textMultiLine"
        android:maxWidth="300dp"
        android:paddingLeft="15dp"
        android:paddingTop="8dp"
        android:paddingRight="15dp"
        android:paddingBottom="8dp"
        android:text="Status"
        android:textAllCaps="false"
        android:textColor="@color/Red"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/text1_fct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_fct"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:text="Order"
        android:textAllCaps="true"
        android:textColor="#FA3E03"
        android:textSize="16sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclefinalorders_fct"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnn_fct"
        android:layout_below="@+id/text1_fct"
        android:orientation="vertical" />


    <LinearLayout
        android:id="@+id/btnn_fct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="invisible">

        <TableRow
            android:id="@+id/hr_fct"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pri_fct"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="Grand Total:"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/Rs_fct"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:text="Rs. 2000"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>